{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src", "src/types"]
}
