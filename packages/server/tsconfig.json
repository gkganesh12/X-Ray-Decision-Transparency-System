{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": false,
    "rootDir": "src",
    "outDir": "dist",
    "noLib": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
