{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "types": ["node", "express"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@xray/sdk": ["../sdk/dist/index", "../sdk/dist"]
    }
  },
  "include": ["src"]
}
