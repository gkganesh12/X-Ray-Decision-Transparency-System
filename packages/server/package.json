{
  "name": "@xray/server",
  "version": "1.0.0",
  "description": "X-Ray API Server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./store": "./dist/store/SQLiteStore.js"
  },
  "scripts": {
    "build": "tsc && cp src/store/schema.sql dist/store/schema.sql",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@xray/sdk": "*",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.19.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
