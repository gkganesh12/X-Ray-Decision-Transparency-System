{
  "name": "xray-system",
  "version": "1.0.0",
  "description": "X-Ray Decision Transparency System - SDK, Dashboard, and Demo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=packages/server\" \"npm run dev --workspace=packages/dashboard\"",
    "build": "npm run build --workspace=packages/sdk && npm run build --workspace=packages/server && npm run build --workspace=packages/demo && npm run build --workspace=packages/dashboard",
    "build:sdk": "npm run build --workspace=packages/sdk",
    "build:server": "npm run build --workspace=packages/server",
    "build:server-only": "npm run build --workspace=packages/sdk && npm run build --workspace=packages/server",
    "build:demo": "npm run build --workspace=packages/demo",
    "build:dashboard": "npm run build --workspace=packages/dashboard",
    "demo": "npm run start --workspace=packages/demo",
    "server": "npm run dev --workspace=packages/server",
    "dashboard": "npm run dev --workspace=packages/dashboard",
    "test": "npm run test:sdk && npm run test:server && npm run test:dashboard",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:sdk": "npm run test --workspace=packages/sdk",
    "test:server": "npm run test --workspace=packages/server",
    "test:dashboard": "npm run test --workspace=packages/dashboard",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": "20.x"
  }
}
